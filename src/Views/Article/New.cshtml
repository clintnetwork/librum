@model Article
@{
    ViewData["Title"] = "New Article";
}
@section Links
{
    <link rel="stylesheet" href="~/lib/simplemde/dist/simplemde.min.css">
}
<div class="text-center py-5 mt-2">
    <h1 class="display-5 mt-3">New Article</h1>
    <p>Fill the form and describe your article.</p>
</div>
<section class="pb-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form method="post" asp-antiforgery="true">
                    <div class="form-group required">
                        <span class="text-danger small float-right" asp-validation-for="Title"></span>
                        <label>Enter a Nice Title</label>
                        <input type="text" class="form-control form-control-lg" asp-for="Title" placeholder="Enter the title of your article" />
                    </div>
                    <div class="form-group required">
                        <span class="text-danger small float-right" asp-validation-for="Content"></span>
                        <label>Post Content (Markdown)</label>
                        <textarea class="form-control" id="markdown-editor" asp-for="Content" placeholder="Enter the content of your article"></textarea>
                    </div>
                    <div class="form-group required">
                        <span class="text-danger small float-right" asp-validation-for="Keywords"></span>
                        <label>Keywords (Important for SEO)</label>
                        <input type="text" class="form-control" asp-for="Keywords" placeholder="Enter some tags separated by comas" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="IsDraft" /> Save as Draft
                    </div>
                    <div class="text-right mt-4">
                        <button type="reset" class="btn btn-black"><i class="fas fa-ban"></i> Clear Form</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Save Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <script src="~/lib/simplemde/dist/simplemde.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function()
    {
        var simplemde = new SimpleMDE({
            element: $("#markdown-editor")[0],
            autosave: {
                enabled: true,
                uniqueId: "LibrumUniqueId",
                delay: 1000,
                },
            spellChecker: false,
            });
    });
    </script>
}