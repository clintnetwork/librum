@model ErrorViewModel
@{
    ViewData["Title"] = "Librum Error";
}
<div class="text-center py-5 mt-2">
    <h1 class="display-5 mt-3">Librum Error Page</h1>
    <p>This error page was generated by Librum.</p>
</div>
<section class="pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                @if (Model.ShowRequestId)
                {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
                }

                The asked requested was unable to executed, maybe the file has been moved or simply removed, this error can also be triggered if the page has crashed, you contact the owner here: @(Configuration.GetValue<string>("Contact"))
            </div>
        </div>
    </div>
</section>
